{
  "extends": "airbnb",
  "env": {
    "browser": true
  },
  "rules": {
    "comma-dangle": "off",
    "indent": ["off"],
    "no-tabs": ["off"],
    "no-debugger": ["off"],
    "linebreak-style": "off",
    "max-len": ["error", 120],
    "no-underscore-dangle": [
      "error",
      {
        "allow": ["_setOptions", "_create", "_super", "__svg__", "_events"],
        "allowAfterThis": true
      }
    ],
    "no-param-reassign": ["error", { "props": false }],
    "object-shorthand": "off",
    "no-plusplus": "off",
    "func-names": ["error", "never"],
    "import/no-extraneous-dependencies": [
      "error",
      {
        "devDependencies": [".storybook/**", "**/*.stories.js", "**/*.spec.js"]
      }
    ],
    "vars-on-top": ["error"],
    // "class-methods-use-this": "off",
    "function-paren-newline": "off",
    "arrow-parens": "off"
  }
}
